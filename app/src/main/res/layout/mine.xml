<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/title_mine"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textSize="19sp" />

        </RelativeLayout>



        <TextView
            android:id="@+id/show_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_mine"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/show_rgs_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_username"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="2010-1-1加入"
            android:textColor="@color/colorText"
            android:textSize="13sp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/show_j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/show_rgs_time"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="添加个人简介，让朋友更了解你"
            android:textColor="@color/colorText"
            android:textSize="13sp"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/edit_j"
            android:layout_alignTop="@+id/show_j"
            android:src="@drawable/ic_attach_file_grey_900_24dp"
            android:layout_toEndOf="@+id/show_j"
            android:layout_marginStart="4dp"
            android:layout_alignBottom="@+id/show_j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/show_j"
            android:layout_marginLeft="4dp" />


        <ImageView
            android:id="@+id/set_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/show_username"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/avatar"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/show_j"
            android:layout_marginTop="16dp"
            android:background="@color/colorGrey" />


        <RelativeLayout
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/divider"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:text="申请专家"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/arrow0"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_keyboard_arrow_right_grey_900_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/line0">

            <TextView
                android:id="@+id/divider0"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorGrey" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_keyboard_arrow_right_grey_900_24dp" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/line1">


            <TextView
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/colorGrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:text="我的收藏"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_keyboard_arrow_right_grey_900_24dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/line2"
            android:background="@color/colorGrey" />

    </RelativeLayout>

</ScrollView>